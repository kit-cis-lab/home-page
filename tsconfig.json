{
  "extends": "astro/tsconfigs/strict",
  "include": [".astro/types.d.ts", "**/*"],
  "exclude": ["dist"],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    // null と undefined を他の型へ代入できなくする
    "strictNullChecks": true,
    // JavaScript ファイルを扱えるようにする
    "allowJs": true
  }
}

---
const { allTags } = Astro.props;
---

<style>
  /* modal overlay (hidden by default) */
  #AchievementFilterModal {
    position: fixed;
    inset: 0;
    background: rgba(0, 0, 0, 0.5);
    display: none; /* hidden until targeted */
    place-items: center;
    z-index: 50;
  }

  /* when URL hash = #AchievementFilterModal → show it */
  #AchievementFilterModal:target {
    display: grid;
  }
</style>

<div id="AchievementFilterModal">
  <div class="bg-white p-3 rounded-lg shadow-lg h-fit mx-auto">
    <div class="flex flex-row justify-between divide-x divide-gray-300">
      <div class="flex flex-col gap-4 p-3">
        <p class="text-xl font-bold">発表年度</p>
        <div class="flex flex-col gap-2">
          {
            ["期間指定なし", "2025", "2024", "2023", "期間指定あり"].map((preset, idx) => (
              <div class="px-3 py-1">
                <label class="flex items-center gap-2 cursor-pointer">
                  <input
                    type="radio"
                    name="achieve-preset"
                    id={`achieve-preset-${idx}`}
                    value={preset}
                    class="w-4 h-4 text-sky-600"
                    aria-label={`期間プリセット ${preset}`}
                  />
                  <span>{preset}</span>
                </label>
              </div>
            ))
          }
        </div>
      </div>
      <div class="flex flex-col gap-4 p-3">
        <p class="text-xl font-bold">タグ</p>
      </div>
    </div>

    <div class="flex flex-row justify-end gap-2 mt-6">
      <a href="#" class="border border-gray-300 rounded-lg px-4 py-1">リセット</a>
      <a href="#" class="bg-sky-700 text-white px-4 py-1 rounded-lg">保存</a>
    </div>
  </div>
</div>
